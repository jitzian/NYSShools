<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="16dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_width="match_parent"
                           android:id="@+id/mImageViewCity"
                           android:layout_height="160dp"
                           android:scaleType="centerCrop"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/mTextViewCity"
                          android:textSize="24sp"
                          android:textStyle="normal"
                          android:fontFamily="sans-serif-light"
                          android:textColor="@color/color_white"
                          android:layout_alignParentStart="true" android:layout_marginStart="232dp"
                          android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                          android:layout_marginTop="123dp" android:layout_marginLeft="232dp"/>
            </RelativeLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:padding="16dp">
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="8dp"
                          android:text="Some text"
                          android:textColor="#000"
                          android:textSize="18sp"
                          android:id="@+id/mTextViewSchoolName"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Some other text"
                          android:textColor="#555"
                          android:id="@+id/mTextViewOverviewParagraph"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="14dp"
                          android:orientation="horizontal">

                <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mButtonDetails"
                        android:text="Details"
                        android:theme="@style/PrimaryFlatButton" android:gravity="center"/>

                <ImageView
                        android:layout_width="@dimen/dimen_50_dp"
                        android:layout_height="@dimen/dimen_40_dp"
                        android:id="@+id/mImageViewGotoLocation"
                        android:src="@drawable/route" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/mLinearLayoutContainerSubItem"
                          android:orientation="vertical"
                          android:paddingTop="25dp"
                          android:paddingBottom="25dp"
                          android:padding="16dp">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="90dp"
                              android:layout_height="wrap_content"
                              android:text="Reading:"
                              android:textColor="#555"
                              android:id="@+id/mTextViewCriticalReadingAvgScoreLabel"
                              android:paddingRight="16dp"
                              android:paddingEnd="16dp"
                              tools:ignore="RtlSymmetry"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Some other text"
                              android:textColor="#555"
                              android:id="@+id/mTextViewCriticalReadingAvgScore"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">

                    <TextView android:layout_width="90dp"
                              android:layout_height="wrap_content"
                              android:text="Math:      "
                              android:textColor="#555"
                              android:id="@+id/mTextViewMathAvgScoreLabel"
                              android:paddingRight="16dp"
                              android:paddingEnd="16dp"
                              tools:ignore="RtlSymmetry"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Some other text"
                              android:textColor="#555"
                              android:id="@+id/mTextViewMathAvgScore"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="90dp"
                              android:layout_height="wrap_content"
                              android:text="Writing:   "
                              android:textColor="#555"
                              android:id="@+id/mTextViewWritingAvgScoreLabel"
                              android:paddingRight="16dp"
                              android:paddingEnd="16dp"
                              tools:ignore="RtlSymmetry"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Some other text"
                              android:textColor="#555"
                              android:id="@+id/mTextViewWritingAvgScore"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>